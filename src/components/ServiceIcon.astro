---
interface Props {
	name: string;
}

const { name } = Astro.props;
const services = [
	{
		title: 'Sieci i systemy teleinformatyczne',
		description:
			'Wykonuje projekty oraz wdrożenia kompleksowych rozwiązań sieciowych i systemów teleinformatycznych, uwzględniając najnowsze dostępne technologie sieciowe.',
		icon: 'network',
	},
	{
		title: 'Oświetlenie LED',
		description:
			'Wykonuje projekty oraz wdrożenia kompleksowych rozwiązań oświetlenia LED, uwzględniając najnowsze dostępne technologie w tym zakresie.',
		icon: 'led',
	},
	{
		title: 'Oprogramowanie',
		description:
			'Tworzymy oprogramowanie dla firm i instytucji w zależności od potrzeb. Zajmujemy się również sprzedażą oprogramowania specjalistycznego innych firm.',
		icon: 'software',
	},
	{
		title: 'Systemy Zarządzania Energią',
		description: 'Wykonujemy projekty oraz instalacje z zakresu zarządzania energią. Prowadzimy także audyty jak i doradztwo z tym związane.',
		icon: 'energy',
	},
	{
		title: 'System Automatyki Budynkowej',
		description:
			'Planujemy i wdrażamy systemy inteligentnego zarządzania budynkami z wykorzystaniem naszych technologii i wieloletniego doświadczenia.',
		icon: 'building',
	},
	{
		title: 'Systemy Teletechniczne w Drogownictwie',
		description:
			'Wykonujemy niezbędne elementy projektu dla systemów teletechnicznych, w tym dróg i autostrad w zależności od potrzeb naszych klientów.',
		icon: 'road',
	},
];
---

<svg class="w-8 h-8 text-primary transition-transform duration-300 transform service-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
	{
		name === 'network' && (
			<path
				stroke-linecap="round"
				stroke-linejoin="round"
				stroke-width="1.5"
				d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4"
			/>
		)
	}
	{
		name === 'led' && (
			<path
				stroke-linecap="round"
				stroke-linejoin="round"
				stroke-width="1.5"
				d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"
			/>
		)
	}
	{name === 'software' && <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />}
	{name === 'energy' && <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13 10V3L4 14h7v7l9-11h-7z" />}
	{
		name === 'building' && (
			<path
				stroke-linecap="round"
				stroke-linejoin="round"
				stroke-width="1.5"
				d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"
			/>
		)
	}
	{
		name === 'road' && (
			<path
				stroke-linecap="round"
				stroke-linejoin="round"
				stroke-width="1.5"
				d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"
			/>
		)
	}
</svg>
